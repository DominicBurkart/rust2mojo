# Set the default behavior for line endings
* text=auto

# Rust source files should always use LF line endings
*.rs text eol=lf
*.toml text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts should always use LF line endings
*.sh text eol=lf

# Windows files should use CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary